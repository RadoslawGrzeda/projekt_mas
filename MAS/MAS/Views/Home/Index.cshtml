@{
    ViewData["Title"] = "Panel";
}

<div class="app-shell">
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="user">
            <div class="avatar"></div>
            <div>
                <div class="user-name">Jan Nowak</div>
                <div class="user-sub">Zrealizowanych rezerwacji: <span id="kpi-completed">10</span></div>
            </div>
        </div>

        <nav class="menu" id="tabs">
            <button class="menu-item active" data-tab="cars">
                <span class="ico">🚗</span> Lista samochodów
            </button>
            <button class="menu-item" data-tab="reservations">
                <span class="ico">📒</span> Lista rezerwacji
            </button>
            <button class="menu-item" data-tab="history">
                <span class="ico">⏰</span> Historia
            </button>
        </nav>
    </aside>

    <!-- Content -->
    <main class="content">
        <!-- Zakładka: SAMOCHODY -->
        <section class="tab-pane active" id="tab-cars">
            <h2>Lista samochodów</h2>

            <div id="alerts"></div>

            <form id="filter-cars" class="filter">
                <div class="field">
                    <label for="startDate">Data rozpoczęcia</label>
                    <input id="startDate" name="startDate" type="date" required />
                </div>
                <div class="field">
                    <label for="days">Liczba dni</label>
                    <input id="days" name="days" type="number" min="1" value="3" required />
                </div>
                <button type="submit" class="btn primary">Filtruj</button>
            </form>

            <div class="cards" id="cars-list">
                <p class="muted">Użyj filtra, aby pobrać dostępne samochody.</p>
            </div>
        </section>

        <!-- Zakładka: REZERWACJE -->
        <section class="tab-pane" id="tab-reservations">
            <h2>Twoje rezerwacje</h2>
            <p class="muted">Tu wkrótce pojawi się lista rezerwacji (TBD).</p>
            <button class="btn" id="ping-api">Ping /api/person/test</button>
            <pre class="codebox" id="ping-out"></pre>
        </section>

        <!-- Zakładka: HISTORIA -->
        <section class="tab-pane" id="tab-history">
            <h2>Historia</h2>
            <p class="muted">Tu wkrótce: filtrowanie historii według zakresu dat.</p>
        </section>
    </main>
</div>
